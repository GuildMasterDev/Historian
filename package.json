{
  "name": "historian",
  "version": "1.0.3",
  "description": "A Svelte + Electron app for organizing history resources",
  "main": "main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/global.css -o ./public/build/bundle.css --minify",
    "build:js": "rollup -c",
    "watch": "npm run build:css -- --watch",
    "electron": "electron .",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-linux": "npm run build && electron-builder --linux",
    "clean": "rm -rf public/build dist"
  },
  "keywords": [
    "electron",
    "svelte",
    "history",
    "resources",
    "education"
  ],
  "author": "Historian",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tsconfig/svelte": "^5.0.2",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rollup": "^4.9.1",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.6",
    "@rollup/plugin-terser": "^0.4.4",
    "svelte": "^5.38.6",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.3",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.historian.app",
    "productName": "Historian",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "resources.json"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Education",
      "icon": "public/icons"
    }
  }
}